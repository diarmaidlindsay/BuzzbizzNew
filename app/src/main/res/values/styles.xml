<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/navigationBarColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="DialpadButtons">
        <item name="android:background">@drawable/button_oval</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WhiteText.Smallest" parent="WhiteText">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="WhiteText.Small" parent="WhiteText">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="WhiteText.Medium" parent="WhiteText">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="WhiteText.Large" parent="WhiteText">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="WhiteText.Largest" parent="WhiteText">
        <item name="android:textSize">25sp</item>
    </style>

</resources>
