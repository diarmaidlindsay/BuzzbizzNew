<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background_light_blue_gradient"
              android:orientation="vertical">
    <TextView
        android:id="@+id/call_name_kanji"
        style="@style/WhiteText.Large"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:padding="5dp"
        android:text="宮脇 一嘉"/>
    <TextView
        android:id="@+id/call_name_kana"
        style="@style/WhiteText.Small"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:text="みやわき さん"/>
    <TextView
        android:id="@+id/call_number"
        style="@style/WhiteText.Medium"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:text="080 1234 5678"/>
    <TextView
        android:id="@+id/call_timer"
        style="@style/WhiteText.Largest"
        android:layout_gravity="center_horizontal"
        android:padding="30dp"
        android:text="00:00"
        android:textSize="50sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@android:drawable/ic_lock_silent_mode"/>
            <TextView
                style="@style/WhiteText.Smallest"
                android:layout_gravity="center_horizontal"
                android:text="ミュート"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@android:drawable/ic_lock_silent_mode_off"/>
            <TextView
                style="@style/WhiteText.Smallest"
                android:layout_gravity="center_horizontal"
                android:text="スピーカ"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:orientation="vertical">
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@android:drawable/ic_dialog_dialer"/>
            <TextView
                style="@style/WhiteText.Smallest"
                android:layout_gravity="center_horizontal"
                android:text="キーパッド"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@android:drawable/ic_media_pause"/>
            <TextView
                style="@style/WhiteText.Smallest"
                android:layout_gravity="center_horizontal"
                android:text="保留"/>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:src="@android:drawable/sym_call_missed"/>
</LinearLayout>