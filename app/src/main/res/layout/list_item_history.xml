<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/history_direction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:layout_widthPercent="10%"/>

    <TextView
        android:id="@+id/history_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/history_direction"
        android:layout_toRightOf="@id/history_direction"
        android:padding="10dp"
        app:layout_widthPercent="70%"/>


    <TextView
        android:id="@+id/history_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/history_name"
        android:layout_toRightOf="@id/history_name"
        android:gravity="end"
        android:textColor="@android:color/darker_gray"
        app:layout_widthPercent="20%"/>

    <TextView
        android:id="@+id/history_line_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/history_time"
        android:layout_toEndOf="@id/history_name"
        android:layout_toRightOf="@id/history_name"
        android:gravity="end"
        android:textColor="@android:color/holo_blue_bright"
        app:layout_widthPercent="20%"/>
</android.support.percent.PercentRelativeLayout>