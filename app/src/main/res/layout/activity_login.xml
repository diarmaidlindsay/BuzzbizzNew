<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background_dark_blue_gradient"
              android:fitsSystemWindows="true"
              android:orientation="vertical">
    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="70sp"/>

    <EditText
        android:id="@+id/edit_username"
        style="@style/WhiteText.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_low_battery"
        android:drawablePadding="10dp"
        android:gravity="start"
        android:hint="@string/username"
        android:textColorHint="@android:color/darker_gray"/>

    <EditText
        android:id="@+id/edit_password"
        style="@style/WhiteText.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:drawablePadding="10dp"
        android:gravity="start"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/darker_gray"/>

    <Button
        android:id="@+id/button_login"
        style="@style/WhiteText.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/round_button_accent_color"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/button_login"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/text_forgot_password"
        style="@style/WhiteText.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/text_forgot_password"/>
</LinearLayout>