<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/transparent"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="20dp"
        android:layout_weight="0.25"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_mute"
            style="@style/CallScreenButtons"
            android:text="m"/>

        <TextView
            style="@style/WhiteText.Smallest"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="ミュート"/>

        <Button
            android:id="@+id/button_speaker"
            style="@style/CallScreenButtons"
            android:text="x"/>

        <TextView
            style="@style/WhiteText.Smallest"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="スピーカ"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_transfer"
            style="@style/CallScreenButtons"
            android:text="q"/>

        <TextView
            style="@style/WhiteText.Smallest"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="転送"/>

        <Button
            android:id="@+id/button_hangup"
            style="@style/CallScreenButtons"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/button_round_red_solid"
            android:padding="0dp"
            android:text="b"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="0dp"
        android:layout_weight="0.25"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_dialpad"
            style="@style/CallScreenButtons"
            android:paddingBottom="13dp"
            android:paddingTop="12dp"
            android:text="g"
            android:textSize="50sp"/>

        <TextView
            style="@style/WhiteText.Smallest"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="キーパッド"/>

        <Button
            android:id="@+id/button_hold"
            style="@style/CallScreenButtons"
            android:text="n"/>

        <TextView
            style="@style/WhiteText.Smallest"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="保留"/>
    </LinearLayout>


</LinearLayout>